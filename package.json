{
  "name": "tictactoe-fullstack",
  "version": "1.0.0",
  "description": "Full-stack Tic-Tac-Toe game with OAuth 2.0",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd tictactoe-be && npm run dev",
    "frontend": "cd tictactoe-fe && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd tictactoe-fe && npm run build",
    "build:backend": "cd tictactoe-be && npm run build",
    "install:all": "npm install && cd tictactoe-fe && npm install && cd tictactoe-be && npm install"
  },
  "keywords": [
    "react",
    "typescript",
    "hono",
    "supabase",
    "oauth",
    "tic-tac-toe"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}